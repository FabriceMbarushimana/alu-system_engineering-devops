#!/usr/bin/env bash
# Installs nginx and sets up a simple web page

# Update package lists
apt-get update -y

# Install nginx
apt-get install -y nginx

# Make sure nginx is running (without using systemctl)
service nginx start

# Create a simple index page with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx (without systemctl)
service nginx restart

