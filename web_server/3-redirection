#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page (301)

apt-get update -y
apt-get install nginx -y

# Create a proper redirect configuration
# Using a more reliable method than sed
cat > /etc/nginx/sites-available/default << 'EOL'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
EOL

# Test nginx configuration
nginx -t

# Restart nginx
service nginx restart

# Wait a moment for nginx to fully restart
sleep 2

# Test the redirect
echo "Testing redirect..."
curl -s -I localhost/redirect_me | head -n 5
